{
    "name": "YouChat",
    "version": "1.0",
    "manifest_version": 2,
    "description": "YouChat",
    "browser_action": {
        "default_icon": "icons/youchatoff.png",
        // "default_icon": {
        //     "19": "icons/youchat19.png",
        //     "38": "icons/youchat76.png"
        // },
        "default_title": "YouChat"
    },
    "icons": {

        "16": "icons/youchat16.png",
        "19": "icons/youchat19.png",
        "38": "icons/youchat76.png",
        "48": "icons/youchat48.png",
        "128": "icons/youchat128.png"

    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage"],
    "content_scripts": [{
        "css": ["youchat.css"],
        "js": ["jquery.min.js", "url.min.js", "youchat.js"],
        "matches": ["https://wx.qq.com/*"]
    }]
}
