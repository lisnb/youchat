{
    "name": "YouChat",
    "version": "1.0",
    "manifest_version": 2,
    "description": "看你麻痹，刷题去！",
    "page_action": {
        "default_icon": {
            "19": "icons/youchat19.png",
            "38": "icons/youchat76.png"
        },
        "default_title": "看你麻痹，刷题去！"
    },
    "icons": {

        "16": "icons/youchat16.png",
        "19": "icons/youchat19.png",
        "38": "icons/youchat76.png",
        "48": "icons/youchat48.png",
        "128": "icons/youchat128.png"

    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs", "storage"],
    "content_scripts": [{
        "css": ["youchat.css"],
        "js": ["jquery.min.js","youchat.js"],
        "matches": ["https://wx.qq.com/*"]
    }]
}
